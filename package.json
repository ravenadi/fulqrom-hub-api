{
  "name": "fulqrom-hub-api",
  "version": "1.0.0",
  "description": "REST API for Fulqrom Hub - Australian Commercial Real Estate & HVAC Building Management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "scheduler": "node scripts/notificationScheduler.js --daemon",
    "send-reminders": "node scripts/notificationScheduler.js",
    "test-expiry": "node scripts/test-expiry-notifications.js",
    "reset-expiry-notifications": "node scripts/reset-expiry-notifications.js",
    "migrate:tenant-structure": "node migrations/run_migration.js",
    "rollback:tenant-structure": "node migrations/rollback_tenant_structure.js",
    "verify:migration": "node migrations/verify_migration.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "lint": "echo \"No linter configured\" && exit 0"
  },
  "keywords": [
    "commercial-real-estate",
    "building-management",
    "hvac",
    "australia",
    "rest-api"
  ],
  "author": "Ravenlabs Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "auth0": "^5.0.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "helmet": "^7.0.0",
    "joi": "^17.13.3",
    "joi-objectid": "^4.0.2",
    "mongoose": "^7.5.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/supertest": "^6.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
